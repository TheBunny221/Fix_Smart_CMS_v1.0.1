# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=4005
CLIENT_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cochin_smart_city_dev
DIRECT_URL=postgresql://username:password@localhost:5432/cochin_smart_city_dev

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@cochinsmartcity.gov.in

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=debug
LOG_TO_FILE=true
VITE_LOG_LEVEL=debug
VITE_SEND_LOGS_TO_BACKEND=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Security
HELMET_CSP_ENABLED=true
TRUST_PROXY=loopback

# Fix_Smart_CMS   - Docker Environment Configuration
# Copy this file to .env and configure for your Docker deployment

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=production
PORT=4005
APP_PORT=4005
CLIENT_URL=http://localhost:4005
CORS_ORIGIN=http://localhost:4005

# ============================================================================
# Database Configuration
# ============================================================================
DB_PASSWORD=secure_password_change_me_in_production
DATABASE_URL=postgresql://nlc_cms_user:secure_password_change_me_in_production@database:5432/nlc_cms_prod

# ============================================================================
# Authentication Configuration
# ============================================================================
JWT_SECRET=your-super-secure-jwt-secret-256-bits-change-me-in-production
JWT_EXPIRE=7d

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_SERVICE=smtp.gmail.com
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-app-password
EMAIL_PORT=587
EMAIL_FROM=NLC-CMS <noreply@domain.com>

# ============================================================================
# Security Configuration
# ============================================================================
TRUST_PROXY=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
HELMET_CSP_ENABLED=true

# ============================================================================
# File Upload Configuration
# ============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=info
LOG_FILE=logs/application.log

# ============================================================================
# Performance Configuration
# ============================================================================
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================================================
# SSL/HTTPS Configuration (for production)
# ============================================================================
HTTPS_ENABLED=false
SSL_KEY_PATH=config/ssl/server.key
SSL_CERT_PATH=config/ssl/server.crt
SSL_CA_PATH=config/ssl/ca-bundle.crt
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/*"],
      "@shared/*": ["./shared/*"]
    },
    "outDir": "./tsbuild", // ðŸ”¥ all compiled output goes here
    "rootDir": ".", // keep folder structure inside tsbuild
    "noEmit": false // ensure tsc actually emits output
  },
  "include": [
    "client",
    "server",
    "shared",
    "netlify",
    "prisma",
    "vite.config.ts",
    "vite.config.server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "tsbuild", // don't recompile build output
    "client/legacy-components/**" // exclude legacy components with syntax errors
  ]
}